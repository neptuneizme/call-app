generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id               String            @id @default(cuid())
  name             String?
  email            String?           @unique
  emailVerified    DateTime?
  image            String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  accounts         Account[]
  audioUploads     AudioUpload[]
  callParticipants CallParticipant[]
  sessions         Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Call {
  id              String            @id @default(cuid())
  callId          String            @unique // Socket room ID or generated call ID
  status          CallStatus        @default(IN_PROGRESS)
  startedAt       DateTime          @default(now())
  endedAt         DateTime?
  mergedAudioPath String? // S3 path to merged stereo audio file
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  audioUploads    AudioUpload[]
  participants    CallParticipant[]
  summary         CallSummary?

  @@index([callId])
  @@index([status])
}

model CallParticipant {
  id       String    @id @default(cuid())
  callId   String
  role     String    @default("participant")
  joinedAt DateTime  @default(now())
  leftAt   DateTime?
  userId   String
  call     Call      @relation(fields: [callId], references: [id], onDelete: Cascade)
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([callId, userId])
  @@index([callId])
  @@index([userId])
}

model AudioUpload {
  id              String           @id @default(cuid())
  callId          String
  userId          String
  filePath        String
  fileSize        Int
  durationSeconds Float?
  mimeType        String           @default("audio/webm")
  status          TranscriptStatus @default(PENDING)
  uploadedAt      DateTime         @default(now())
  call            Call             @relation(fields: [callId], references: [id], onDelete: Cascade)
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  transcription   Transcription?

  @@unique([callId, userId])
  @@index([callId])
  @@index([status])
}

model Transcription {
  id              String      @id @default(cuid())
  audioUploadId   String      @unique
  textContent     String      @db.Text // Full transcript text
  rawResponse     Json // Whisper verbose_json response
  wordTimestamps  Json // Parsed timestamps for merging
  language        String? // Detected language
  durationSeconds Float?
  createdAt       DateTime    @default(now())
  audioUpload     AudioUpload @relation(fields: [audioUploadId], references: [id], onDelete: Cascade)
}

model CallSummary {
  id               String   @id @default(cuid())
  callId           String   @unique
  mergedTranscript String   @db.Text // Chronological merged script with speaker labels
  summary          String?  @db.Text // GPT generated summary (optional, filled later)
  language         String? // Transcription language
  durationSeconds  Float?  // Total audio duration
  modelUsed        String   @default("deepgram-nova-3")
  generatedAt      DateTime @default(now())
  call             Call     @relation(fields: [callId], references: [id], onDelete: Cascade)

  @@index([callId])
}

enum CallStatus {
  IN_PROGRESS
  AWAITING_UPLOADS
  PROCESSING
  COMPLETED
  FAILED
}

enum TranscriptStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
